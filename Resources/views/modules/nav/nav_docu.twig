<!-- Navbar and Header -->
<nav id="{{ identifier }}" class="nav-extended blue">
    <div class="nav-background">
        <div class="pattern active" style="background-image: url({{ base_url() }}/Resources/static/assets/img/overlays/{{ nav_background }});"></div>
    </div>
    <div class="nav-wrapper container">
        <a href="{{ base_url() }}" class="brand-logo"><i class="mdi mdi-source-branch"></i>EA-Solution</a>
        {% if sidenav %}
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        {% endif %}
        <ul class="right hide-on-med-and-down">
            <li {{ active == 'home' ? 'class="active"' : '' | raw}}><a href="{{ path_for( 'home' ) }}">Home</a></li>
            <li {{ active == 'dark' ? 'class="active"' : '' | raw}}><a href="index-dark.html">Dark Theme</a></li>
            <li {{ active == 'blog' ? 'class="active"' : '' | raw}}><a href="blog.html">Blog</a></li>
            <li {{ active == 'docs' ? 'class="active"' : '' | raw}}><a href="{{ path_for( 'docs' ) }}">Docs</a></li>
            <li><a href="http://moodle.ea-solution.de">Moodle</a></li>

            {% if auth.check %}
                <li><a class='dropdown-button' href='#' data-activates='profil-dropdown' data-belowOrigin="true" data-constrainWidth="false">{{ auth.user._vorname }} {{ auth.user._name }}<i class="material-icons right">arrow_drop_down</i></a></li>
            {% else %}
                <li {{ active == 'registry' ? 'class="active"' : '' | raw}}><a href="{{ path_for( 'auth.registry' ) }}">Registrieren</a></li>
                <li {{ active == 'login' ? 'class="active"' : '' | raw}}><a class='dropdown-button' data-activates='feature-dropdown' data-belowOrigin="true" data-constrainWidth="false">Login<i class="material-icons right">arrow_drop_down</i></a></li>
            {% endif %}

        </ul>

        {% if auth.check %}
            <!-- Dropdown Structure -->
            <ul id='profil-dropdown' class='dropdown-content'>
                <li {{ active == 'profil' ? 'class="active"' : '' | raw}}><a href="">Profil</a></li>
                <li><a href="{{ path_for('auth.logout' ) }}">Logout</a></li>
            </ul>
        {% else %}
            <!-- Dropdown Structure -->
            <ul id='feature-dropdown' class='dropdown-content'>
                <li><a href="{{ path_for( 'auth.login' ) }}">Login</a></li>
                <li><a href="full-header.html">Fullscreen Header</a></li>
                <li><a href="horizontal.html">Horizontal Style</a></li>
                <li><a href="no-image.html">No Image Expand</a></li>
            </ul>
        {% endif %}

    </div>

    <div class="nav-header center">
        <h1>{{ caption }}</h1>
        <div class="tagline">{{ subline }}</div>
    </div>
</nav>

{% if sidenav %}
    <ul class="side-nav" id="nav-mobile">
        {% if auth.check %}
            <li><a class='dropdown-button' data-activates='profil-dropdown-2' data-belowOrigin="true" data-constrainWidth="false">{{ auth.user._vorname }} {{ auth.user._name }}<i class="material-icons right">arrow_drop_down</i></a></li>
            <li>
                <div class="userView">
                    <img class="background" src="{{ user.picUrl }}">
                    <span class="blue-text text-darken-4 name">{{ auth.user.vorname }} {{ auth.user.name }}</span>
                    <span class="blue-text text-darken-4 name">{{ auth.user.email }} </span>
                </div>
            </li>
        {% else  %}
            <li {{ active == 'registry' ? 'class="active"' : '' | raw}}><a href="{{ path_for( 'auth.registry' ) }}">Registrieren</a></li>
            <li {{ active == 'login' ? 'class="active"' : '' | raw}}><a class='dropdown-button' data-activates='feature-dropdown2' data-belowOrigin="true" data-constrainWidth="false">Login<i class="material-icons right">arrow_drop_down</i></a></li>
        {% endif %}

        <li><a href="{{ path_for( 'home' ) }}"><i class="mdi mdi-source-branch mdi-24px"></i>EA - Solution</a></li>
        <li><a href="index-dark.html"><i class="material-icons">brightness_3</i>Dark Theme</a></li>
        <li><a href="blog.html"><i class="material-icons">edit</i>Blog</a></li>
        <li><a href="{{ path_for( 'docs' ) }}"><i class="mdi mdi-school mdi-24px"></i>Docs</a></li>
        <li><a href="full-header.html"><i class="material-icons">fullscreen</i>Fullscreen Header</a></li>
        <li><a href="horizontal.html"><i class="material-icons">swap_horiz</i>Horizontal Style</a></li>
        <li><a href="no-image.html"><i class="material-icons">texture</i>No Image Expand</a></li>


    </ul>

    {% if auth.check %}
        <!-- Dropdown Structure -->
        <ul id='profil-dropdown2' class='dropdown-content'>
            <li {{ active == 'profil' ? 'class="active"' : '' | raw}}><a href="">Profil</a></li>
            <li><a href="{{ path_for('auth.logout' ) }}">Logout</a></li>
        </ul>
    {% else %}
        <!-- Dropdown Structure -->
        <ul id='feature-dropdown2' class='dropdown-content'>
            <li><a href="{{ path_for( 'auth.login' ) }}">Login</a></li>
            <li><a href="full-header.html">Fullscreen Header</a></li>
            <li><a href="horizontal.html">Horizontal Style</a></li>
            <li><a href="no-image.html">No Image Expand</a></li>
        </ul>
    {% endif %}
{% endif %}
